{
  "manifest_version": 3,
  "name": "QuickAI",
  "version": "1.0.0",
  "description": "Select text on any page with the Alt key to get instant AI assistance from OpenRouter.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://openrouter.ai/api/v1/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "history.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["models.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}